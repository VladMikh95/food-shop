<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodshop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="homeAsUpIndicator">@drawable/toolbar_button_up</item>
    </style>

    <style name="StartFragmentCategories">
        <item name="cardCornerRadius">@dimen/category_radius</item>
        <item name="android:layout_height">@dimen/start_category_height</item>
        <item name="android:layout_marginTop">@dimen/category_margin_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/category_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/category_margin_start_end</item>
        <item name="android:layout_marginBottom">@dimen/category_margin_top_bottom</item>
    </style>

    <style name="StartCategoryText">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/category_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/category_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/category_text_margin_start</item>
    </style>

    <style name="AppTheme.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">343dp</item>
        <item name="dialogCornerRadius">15dp</item>
    </style>
</resources>